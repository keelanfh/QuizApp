<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.keelan.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MultiplayerChoiceScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".StartScreen"/>
        <activity android:name=".QuestionScreen"/>
        <activity android:name=".AnswerScreen"/>
        <activity android:name=".AllQuestionScreen"/>
        <activity android:name=".ScoreScreen"/>
        <activity android:name=".AllScoreScreen"/>
        <activity android:name=".RegistrationScreen"/>
        <activity android:name=".MultiplayerRegistrationScreen"/>
    </application>

</manifest>